

<div class="container">

  <h3><span class="primary_blue">Chicago Stage Direction</span> is a streamlined app allowing actors to submit materials with a single click. We post new auditions every day, so check back frequently!</h3>

<div class="row">
  <div class="col-md-3">
        <h1 class="right">Auditions <i class="fa fa-arrow-right"></i></h1>
  <ul class="list-group">
  <li class="list-group-item">
    <span class="badge"><%= Audition.all.count %></span>
    All Auditions
  </li>
  <li class="list-group-item">
    <span class="badge"><%= Audition.where(equity: "Equity").count %></span>
    Equity Auditions
  </li>
  <li class="list-group-item">
    <span class="badge"><%= Audition.where(equity: "Non-Equity").count %></span>
    Non-Equity Auditions
  </li>
</ul>
<span class="notice"><%= notice %></span>
  </div>

<div class="col-md-9">
    <% @auditions.each do |audition| %>
    <% company = Company.find_by(id: audition.company_id) %>
        <h2><%= link_to '<i class="fa fa-check"></i> Submit'.html_safe, new_submission_url(audition_id: audition.id), class: "btn btn-primary" %>  <%= company.name %>: <%= link_to audition.name, audition, class: "link_fix" %></h2>
        <% if audition.equity == "Equity" %>
        <p class="primary_blue"><i class="fa fa-star"></i> <span class="bold"><%= audition.equity %></span></p>
        <% else %>
        <p class="primary_blue"><i class="fa fa-star-o"></i> <span class="bold"><%= audition.equity %></span></p>
        <% end %>
        <span class="bold">Audition Date:</span> <%= audition.audition_date %><br>
        <%= audition.description %><br>
  <% end %>
  </div>
</div>


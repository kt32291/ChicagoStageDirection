<%= link_to '<i class="fa fa-arrow-left"></i> Back'.html_safe, :back, class: "link_fix" %>

<p id="notice"><%= notice %></p>
<div class="panel panel-info">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to @audition.company.name, company_url(@audition.company), class: "link_fix" %></h3>
  </div>
  <div class="panel-body">
<h2 class="name"><%= @audition.name %></h2>
  <div class="col-md-3">
    <%= image_tag(@audition.company.logo, width: "250") %>
  </div>
  <div class="col-md-9">
<p><span class="bold">Posted:</span> <%= @audition.post_date %></p>
<p><span class="bold">Audition date:</span> <%= @audition.audition_date %></p>

<p><%= @audition.description %></p>

<% if session[:associate_id] %>
  <% associate = Associate.find_by(id: session[:associate_id]) %>
  <% if associate.company_id == @audition.company.id %>
  <%= link_to '<i class="fa fa-list-ol"></i> Submissions'.html_safe, submissions_url(audition_id: @audition.id), class: "btn btn-primary" %>
  <%= link_to '<i class="fa fa-pencil"></i> Edit Audition'.html_safe, edit_audition_path(@audition), class: "btn btn-primary" %>
  <%= link_to '<i class="fa fa-trash-o"></i> Delete Audition'.html_safe, @audition, method: :delete, data: { confirm: 'Are you sure you want to delete this audition? This action cannot be reversed.' }, class: "btn btn-primary" %>
  <% end %>
<% end %>
<br>
<br>

<% unless session[:associate_id] %>
<%= link_to 'Submit', new_submission_url(audition_id: @audition.id), class: "btn btn-primary" %>
<% end %>


<br>
<br>
<br>
</div>
</div>
</div>
